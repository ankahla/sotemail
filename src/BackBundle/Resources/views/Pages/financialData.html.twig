{% extends 'BackBundle::layout.html.twig' %}
{% block title %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/back/css/lib/summernote/summernote.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/back/css/separate/pages/editor.min.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/back/css/separate/vendor/select2.min.css') }}') }}">
    <link rel="stylesheet" href="{{ asset('bundles/back/css/separate/pages/project.min.css') }}">
    {{ parent() }}
